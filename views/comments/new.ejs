<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="col-md-12 text-center">Create a new comment for <%= campground.name %></h1>
        <form class="form-signin" action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="Text...">
            </div>
            <div class="form-group">
                <button class="btn btn-large btn-primary btn-block">Submit</button>
            </div>
            <a href="/campgrounds">Go back</a>
        </form>
    </div>
</div>
<% include ../partials/footer %>