<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="col-md-12 text-center">Edit Comment</h1>
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST" class="form-signin">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <button class="btn btn-large btn-primary btn-block">submit</button>
            </div>
            <a href="/campgrounds">Go back</a>
        </form>
    </div>
</div>
<% include ../partials/footer %>