<% include ../partials/header %>
    
    <% if (currentUser && currentUser.isAdmin) { %>
        <h1>You're an admin!</h1>
    <% } %>
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to HotView</h1>
            <!--View our hanspicked camping site-->
            <p>Take a look at our user reviewed accomodations.</p>
            <div>
                <!--add new campgrounds-->
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add an accomodation</a>
            </div>
            <p>
                <form action="/campgrounds" method="GET" class="form-inline">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="Search..." class="form-control">
                        <input type="submit" value="Search" class="btn btn-default">
                    </div>
                </form>
            </p>
        </div>
    </header>
    <!-- display all campgrounds -->
     <div class="row text-center" style="display: flex; flex-wrap: wrap;"> 
        <div class="col-md-12">
            <% if (noMatch !== null) { %>
                <h3><%= noMatch %></h3>
            <% } %>
        </div>
        <% campgrounds.forEach(function(camps){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= camps.image %>">
                    <div class="caption">
                        <h4><%= camps.name %></h4>
                    </div>
                     <p>
                        <a href="/campgrounds/<%= camps._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div> 

<% include ../partials/footer %>