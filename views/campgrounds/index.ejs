<% include ../partials/header %>
    
    <% if (currentUser && currentUser.isAdmin) { %>
        <h1>You're an admin!</h1>
    <% } %>
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to HotView</h1>
            <!--View our hanspicked camping site-->
            <p>Take a look at our user reviewed accomodations.</p>
            <div>
                <!--add new campgrounds-->
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add an accomodation</a>
            </div>
            <p>
                <form action="/campgrounds" method="GET" class="form-inline">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="Search..." class="form-control">
                        <input type="submit" value="Search" class="btn btn-default">
                    </div>
                </form>
            </p>
        </div>
    </header>
    <!-- display all campgrounds -->
     <div class="row text-center" > 
        <div class="col-md-12">
            <% if (noMatch !== null) { %>
                <h3><%= noMatch %></h3>
            <% } %>
        </div>
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card img-fluid" id="thumbnail" >
                  <img class="card-img-top" src="<%= campground.image %>" alt="<%= campground.name %>">
                  <div class="card-body">
                    <h5 class="card-title"><%= campground.name %></h5>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                  </div>
                </div>
            </div>
        <% }); %>
    </div> 

<% include ../partials/footer %>